<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp9.SignUpPage">
    <ScrollView>
        <VerticalStackLayout BackgroundColor="#EEEBDD">

            <!-- Logo Container -->
            <Grid HorizontalOptions="Center" Margin="0,10,0,0">
                <Image Source="todo.svg" ScaleX="0.6" ScaleY="0.6"/>
            </Grid>

            <!-- Message Container using Border (replacing Frame) -->

            <VerticalStackLayout HorizontalOptions="Fill" BackgroundColor="#EEEBDD">

                <!-- Input Fields -->
                <Border BackgroundColor="White"
                            Margin="0,3"
                            StrokeShape="RoundRectangle 12"
                            MaximumWidthRequest="360">
                    <Entry x:Name="EmailEntry"
                               PlaceholderColor="DarkGrey"
                               WidthRequest="350"
                               Placeholder="Email address"
                               Keyboard="Email"
                               HeightRequest="50"
                               TextColor="Black"/>
                </Border>

                <Border BackgroundColor="White"
                            Margin="0,3"
                            StrokeShape="RoundRectangle 12"
                            MaximumWidthRequest="360">
                    <Entry x:Name="FirstNameEntry"
                               PlaceholderColor="DarkGrey"
                               WidthRequest="350"
                               Placeholder="First Name"
                               Keyboard="Text"
                               HeightRequest="50"
                               TextColor="Black"/>
                </Border>

                <Border BackgroundColor="White"
                            Margin="0,3"
                            StrokeShape="RoundRectangle 12"
                            MaximumWidthRequest="360">
                    <Entry x:Name="LastNameEntry"
                               PlaceholderColor="DarkGrey"
                               WidthRequest="350"
                               Placeholder="Last Name"
                               Keyboard="Text"
                               HeightRequest="50"
                               TextColor="Black"/>
                </Border>

                <Border BackgroundColor="White"
                            Margin="0,3"
                            StrokeShape="RoundRectangle 12"
                            MaximumWidthRequest="360">
                    <Entry x:Name="PasswordEntry"
                               PlaceholderColor="DarkGrey"
                               WidthRequest="350"
                               Placeholder="Password"
                               IsPassword="True"
                               HeightRequest="50"
                               TextColor="Black"/>
                </Border>

                <Border BackgroundColor="White"
                            Margin="0,3"
                            StrokeShape="RoundRectangle 12"
                            MaximumWidthRequest="360">
                    <Entry x:Name="ConfirmPasswordEntry"
                               PlaceholderColor="DarkGrey"
                               WidthRequest="350"
                               Placeholder="Confirm Password"
                               IsPassword="True"
                               HeightRequest="50"
                               TextColor="Black" />
                </Border>


                <!-- Buttons -->
                <Button Text="Sign in"
						    FontSize="15"
                            BackgroundColor="#630000"
                            TextColor="White"
                            WidthRequest="350"
                            CornerRadius="8"
                            HeightRequest="30" 
						    Clicked="SignUpButton_Clicked"
						    Margin="0,20,0,5"/>

                <Button Text="Go Back"
							FontSize="15"
                            BackgroundColor="#A8766F"
                            TextColor="Black"
                            CornerRadius="8"
                            HeightRequest="30"
                            WidthRequest="350"
                            Clicked="GoBackButton_Clicked" />
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>